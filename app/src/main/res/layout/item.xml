<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_item_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/text_item_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_item_id"
            />
        <TextView
            android:id="@+id/text_item_type"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/text_item_login"
            app:layout_constraintLeft_toRightOf="@id/text_item_id"
            />
        <TextView
            android:id="@+id/text_item_url"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/text_item_type"
            app:layout_constraintLeft_toRightOf="@id/text_item_id"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>