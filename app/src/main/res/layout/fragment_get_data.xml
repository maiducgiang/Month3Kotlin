<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.GetDataFragment">

        <EditText
            android:id="@+id/edit_get_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="login"
            android:textSize="13dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/edit_get_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <EditText
            android:id="@+id/edit_get_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type"
            android:textSize="13dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <EditText
            android:id="@+id/edit_get_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="url"
            android:textSize="13dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/edit_get_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <Button
            android:id="@+id/button_get_add"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ADD DATA"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/edit_get_url"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <Button
            android:id="@+id/button_get_next"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="SHOW DATA"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/button_get_add"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>